{
    "compilerOptions": {
        "outDir": "./lib",
        "module": "esnext",
        "target": "esnext",
        "lib": ["esnext", "dom"],
        "sourceMap": true,
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "allowJs": true,
        "skipLibCheck": true,
        "strictNullChecks": false,
        "alwaysStrict": false,
        "noImplicitThis": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["index.d.ts", "src/**/*", ".eslintrc.js", "config/**/*"],
    "exclude": [
        "dependencies",
        "node_modules",
        "build",
        "dist",
        "scripts",
        "webpack",
        "jest"
    ]
}
